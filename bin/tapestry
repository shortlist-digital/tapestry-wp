#!/usr/bin/env node

const program = require('commander')
const pkg = require('../package.json')

program
  .version(pkg.version)
  .description(pkg.description)
  .usage('[options]')
  .command('development', 'Run a Tapestry website in development mode', {
    isDefault: true
  })
  .command('init', 'Add some useful defaults to your Tapestry website')
  .command('build', 'Build server and client scripts in production mode')
  .command('start', 'Run a Tapestry website in production mode')

program.parse(process.argv)
