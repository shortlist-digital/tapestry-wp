#!/usr/bin/env node
const sade = require('sade')
const pkg = require('../package.json')
const hotServer = require('./tapestry-hot-server')

const prog = sade('tapestry')

prog
  .version(pkg.version)

prog
  .command('hot-server')
  .describe('Run a Tapestry website in server hot reload mode')
  .action(hotServer)

prog.parse(process.argv)
