#!/usr/bin/env node

const program = require('commander')
const pkg = require('../package.json')

program
  .version(pkg.version)
  .description(pkg.description)
  .usage('[options]')
  .command('dev', 'Run a Tapestry site in development mode', {
    isDefault: true
  })
  .command('build', 'Build the scripts for a Tapestry site')
  .command('run', 'Run a Tapestry site in production mode if scripts have been built')
  .command('start', 'Run a Tapestry site in production mode')
  .command('init', 'Bootstrap a Tapestry project')

program.parse(process.argv)
