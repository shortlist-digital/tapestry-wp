#!/usr/bin/env node

const fs = require('fs-extra')
const path = require('path')
const logger = require('../dist/logger')
const cwd = process.cwd()

logger.info('Adding some sensible defaultsâ€¦\n')

const createDir = src =>
  fs.ensureDirSync(
    path.resolve(cwd, src)
  )
const copySrc = src =>
  fs.copySync(
    path.resolve(cwd, 'node_modules/tapestry-wp/bootstrap/', src),
    path.resolve(cwd, src), { overwrite: false }
  )

createDir('public')
copySrc('tapestry.config.js')
copySrc('components')
copySrc('styles')

logger.success('Sensible defaults ahoy!\n')
