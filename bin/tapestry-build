#!/usr/bin/env node

const createCompilers = require('../dist/create-compilers')
const logger = require('../dist/logger')
const cwd = process.cwd()
const env = 'production'

logger.info(`Building Tapestryâ€¦ \n`)

// create webpack node compilers
const {
  serverCompiler,
  clientCompiler
} = createCompilers({ cwd, env })

// run server webpack build
serverCompiler.run(err => {
  if (err) {
    logger.errorObject(err)
    process.exit(0)
  }
  // run client webpack build
  clientCompiler.run(err => {
    if (err) {
      logger.errorObject(err)
      process.exit(0)
    }
    logger.success(`Tapestry scripts built\n`)
  })
})
