#!/usr/bin/env node

const path = require('path')
const createCompilers = require('../dist/create-compilers')
const logger = require('../dist/logger')

// define
const cwd = process.cwd()
const env = 'development'

logger.info(`Building Tapestry… \n`)

const {
  serverCompiler,
  clientCompiler
} = createCompilers({ cwd, env })

let serverBooted = false

serverCompiler.run(err => {
  if (err) {
    logger.errorObject(err)
    process.exit(0)
  }
  logger.success(`Server scripts built…`)

  clientCompiler.watch({}, err => {
    if (err) {
      logger.errorObject(err)
      process.exit(0)
    }
    logger.success(`Client scripts built… \n`)
    if (!serverBooted) {
      // server path relative to root
      const serverPath = path.resolve(cwd, '.tapestry/server.bundle.js')
      // require server and boot
      const server = require(serverPath).default
      server({ cwd, env })
      serverBooted = true
    }
  })
})
